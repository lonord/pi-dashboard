	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Electron Renderer Watch",
			"program": "${workspaceFolder}/script/watch.js",
			"preLaunchTask": "build renderer"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Electron Main",
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
			},
			"args": [
				"."
			],
			"preLaunchTask": "build main"
		}
	],
	"compounds": [
		{
			"name": "Electron All",
			"configurations": [
				"Electron Renderer Watch",
				"Electron Main"
			]
		}
	]
}